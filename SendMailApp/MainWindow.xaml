<Window x:Class="SendMailApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SendMailApp"
        mc:Ignorable="d"
        Title="メール送信アプリ" Height="450" Width="500">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="149"/>
            <RowDefinition Height="34*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="155*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Height="23" Margin="32,29,0,0" Grid.Row="0" TextWrapping="Wrap" Text="件名:" VerticalAlignment="Top"  Width="120"/>
        <TextBlock HorizontalAlignment="Left" Height="23" Margin="32,19,0,0" Grid.Row="1" TextWrapping="Wrap" Text="To:" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Height="23" Margin="32,23,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Cc:" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Height="23" Margin="32,10,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Bcc:" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Height="23" Margin="32,18,0,0" Grid.Row="4" TextWrapping="Wrap" Text="本文" VerticalAlignment="Top" Width="120"/>
        <StackPanel HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Grid.Column="1" Margin="219,10,0,-45" Grid.Row="5">
            <Button Name="キャンセル" VerticalAlignment="Bottom"/>
            <Button Name="送信" VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>
</Window>
